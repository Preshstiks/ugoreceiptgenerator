{
  "name": "dugo-receipt-app",
  "productName": "Ugo Receipt Generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main/main.cjs",
  "scripts": {
    "dev": "yarn build:main && electron-forge start",
    "build:main": "vite build --config vite.main.config.ts",
    "build:renderer": "vite build --config vite.config.ts",
    "build": "tsc -b && yarn build:main && yarn build:renderer",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:win": "electron-forge make --platform=win32 --arch=x64"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "electron-squirrel-startup": "^1.0.1",
    "firebase": "^11.8.1",
    "formik": "^2.4.6",
    "html2pdf": "^0.0.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.6.2",
    "react-router-dom": "^7.6.2",
    "react-spinners": "^0.17.0",
    "react-to-pdf": "^2.0.1",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.8",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "36.4.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
